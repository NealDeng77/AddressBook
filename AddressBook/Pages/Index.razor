@page "/"
@using AddressBook.Data
@inject AddressService objAddressService

<NavLink class="nav-link" href="AddAddress">
    <span class="oi oi-plus" aria-hidden="true"></span>Add New

</NavLink>

<h2>Address Information</h2>
@if (objAddresses == null)
{
    <p><em>Loading....</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>AddressLine1</th>
                <th>AddressLine2</th>
                <th>AddressLine3</th>
                <th>ExtraData</th>
                <th>Country</th>
                <th>AdministrativeArea</th>
                <th>Locality</th>
                <th>Sublocality</th>
                <th>PostalCode</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var address in objAddresses)
            {
            <tr>
                <td>@address.AddressLine1</td>
                <td>@address.AddressLine2</td>
                <td>@address.AddressLine3</td>
                <td>@address.ExtraData</td>
                <td>@address.Country</td>
                <td>@address.AdministrativeArea</td>
                <td>@address.Locality</td>
                <td>@address.Sublocality</td>
                <td>@address.PostalCode</td>
                <td>

                    <a class="nav-link" href="EditAddress/@address.Id">
                        <span class="oi oi-pencil" aria-hidden="true"></span>Edit
                    </a>

                </td>
                <td>
                    <a class="nav-link" href="DeleteAddress/@address.Id">
                        <span class="oi oi-trash" aria-hidden="true"></span>Delete
                    </a>
                </td>
            </tr>
            }
        </tbody>
    </table>

}

@code {
    List<Address> objAddresses;
    protected override async Task OnInitializedAsync()
    {
        objAddresses = await Task.Run(() => objAddressService.GetAllAddresses());
    }
}
